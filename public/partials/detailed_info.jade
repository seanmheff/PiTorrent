.page-head
  h3.pull-left {{name}}
  .clearfix

include cant_connect_rtorrent

ul.nav.nav-pills
  li.active
    a(href="#/main/{{hash}}") Overview
  li
    a(href="#/main/{{hash}}/peers") Peers
  li
    a(href='#') Files

.container
  .row
    .col-md-12
      .widget.wred
        .widget-head
          .pull-left Overview
          .widget-icons.pull-right
            a.wminimize(href='#')
              i.icon-chevron-up
            a.wclose(href='#')
              i.icon-remove
          .clearfix
        .widget-content
          p {{torrentInfo.dir}}