.widget.wgreen
  .widget-head
    .pull-left Currently Uploading
    .widget-icons.pull-right
      a.wminimize(href='#')
        i.icon-chevron-up
      a.wclose(href='#')
        i.icon-remove
    .clearfix
  .widget-content
    ul.project
      li(ng-repeat="torrent in torrentResults.torrents | filter:uploading | orderBy:'uploadRate'")
        a(href="#/main/{{torrent.hash}}", ng-click="setName(torrent.name)")
          p
            b {{torrent.name}}
        p.p-meta
          span Uploaded : {{torrent.uploaded}}
          |  Upload Speed: {{torrent.uploadRateHumanReadable}}
        .progress(ng-class="{'progress-success': (torrent.complete == 1)}")
          .progress-bar(ng-class="{'progress-bar-success': (torrent.complete == 1)}", style='width: {{torrent.percentDone}}%')
            | {{torrent.percentDone}}%
      li(ng-show='(torrentResults.torrents | filter:uploading).length == 0') No torrents
    .clearfix
