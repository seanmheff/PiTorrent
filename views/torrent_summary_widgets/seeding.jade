.widget.wgreen
  .widget-head
    .pull-left Seeding
    .widget-icons.pull-right
      a.wminimize(href='#')
        i.icon-chevron-up
      a.wclose(href='#')
        i.icon-remove
    .clearfix
  .widget-content
    // Widget content
    // Task list starts
    ul.project
      li(ng-repeat="torrent in torrentResults.torrents | filter:seeding | orderBy:'name' | limitTo:5")
        strong {{torrent.name}}
        p.p-meta
          span Downloaded : {{torrent.downloaded}}
            |  Upload Speed: {{torrent.uploadRateHumanReadable}}
        .progress
          // Progress bar
          .bar.bar-success(style='width: {{torrent.percentDone}}%;') {{torrent.percentDone}}%
      li(ng-show='(torrentResults.torrents | filter:seeding).length > 5')
        .text-center
          .button.btn.btn-primary(ng-click="tab.seedingTab = true")
            | And {{(torrentResults.torrents | filter:seeding).length - 5}} more
      // This list item only shows when the array is empty
      li(ng-show='(torrentResults.torrents | filter:seeding).length == 0') No torrents
    .clearfix
