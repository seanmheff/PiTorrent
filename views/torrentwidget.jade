.torrents(ng-controller="TorrentCtrl")
  tabset
    tab(heading="Overview")
      .container-fluid
        .row-fluid
          .span6
            include torrentseedingwidget
          .span6
            include torrentleechingwidget
        .row-fluid
          .span6
            include torrentdownloadingwidget
          .span6
            include torrentuploadingwidget

    tab(ng-repeat='view in tabs', heading='{{view.title}}', active='view.active')
      .container-fluid
        .row-fluid
          .span12
            .widget.wred
              // Widget title
              .widget-head
                .pull-left {{view.title}}
                .widget-icons.pull-right
                  a.wminimize(href='#')
                    i.icon-chevron-up
                  a.wclose(href='#')
                    i.icon-remove
                .clearfix
              .widget-content
                // Widget content
                // Task list starts
                ul.project
                  li(ng-repeat="torrent in torrentResults.torrents | orderBy:view.orderBy | filter:view.filter")
                    p
                      | <strong>{{torrent.name}}</strong>
                    .file-upload
                      .pull-right
                        .btn-grou1p
                          button.btn.btn-mini.btn-success
                            i.icon-play
                          button.btn.btn-mini.btn-primary
                            i.icon-pause
                          button.btn.btn-mini.btn-danger
                            i.icon-remove.progress
                      p.p-meta
                        span Downloaded : {{torrent.downloaded}} {{torrent.percentDone}}% Done
                        |  Upload Speed: {{torrent.uploadRateHumanReadable}} Download Speed: {{torrent.downloadRateHumanReadable}}
                    .progress(ng-class="{'1':'', '0':'progress-striped active'}[torrent.complete]")
                      // Progress bar
                      .bar(ng-class="{'1':'bar-success', '0':''}[torrent.complete]", style='width: {{torrent.percentDone}}%;') {{torrent.percentDone}}%

                .clearfix

